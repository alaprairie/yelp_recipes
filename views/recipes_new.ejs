<%- include("partials/header") %>
<div class="container">
	<h1>Add New Recipe</h1>
	<form action="/recipes" method="POST">
	  <div class="form-group">
 	   <label for="title">Title</label>
	    <input type="text" class="form-control" name="title" placeholder="ex. mashed potatoes" autofocus>
	  </div>
	  <div class="form-group">
	    <label for="description">Description</label>
	    <input type="text" class="form-control" name="description">
	  </div>
		<div class="form-group">
	    <label for="author">Author</label>
	    <input type="text" class="form-control" name="author">
	  </div>
		<% for(i=0; i<10; i++) { %>
		<div class="form-group">
	    <label for="ingredients">Ingredients (Please use decimals)</label>
	    <input type="text" name="ingredients[<%= i %>]">
		<input type="number" step="any" name="ingredients_amount[<%= i %>]">
		<select name="ingredients_measurement[<%= i %>]">
		<option disabled selected> -- Choose Below -- </option>
			<option>big spoonfulls</option>
			<option>c</option>
			<option>g</option>
			<option>handfulls</option>
			<option>kg</option>
			<option>lb</option>
			<option>ml</option>
			<option>oz</option>
			<option>small spoonfulls</option>
			<option>spoonfulls</option>
			<option>steins</option>
			<option>tbsp</option>
			<option>each</option>
			<option>tsp</option>
			</select>
	  </div>	
		<% } %>
		<div class="form-group">
	    <label for="instructions">Instructions</label>
		<textarea type="text" class="form-control" name="instructions" rows="3"></textarea>
	  </div>
		<div class="form-group">
	    <label for="date">Date</label>
	    <input type="date" class="form-control" name="date">
	  </div>
		<div class="form-group">
	    <label for="genre">Genre</label>
	    <select class="form-control" id="genre" name="genre">
			<option disabled selected> -- Choose Below -- </option>
			<option>Cajun</option>
			<option>Canadian</option>
			<option>Chinese</option>
			<option>French</option>
			<option>Goblin</option>
			<option>Greek</option>
			<option>Indian</option>
			<option>Italian</option>
			<option>Japanese</option>
			<option>Mexican</option>
			<option>Puerto-Rican</option>
			<option>Slow-Cooker</option>
			<option>Swiss</option>
			<option>Thai</option>
			<option>Other</option>
			</select>
	  </div>
	  <div class="form-group">
	    <label for="image_link">Link to Image</label>
	    <input type="text" class="form-control" name="image_link" placeholder="https://www.myimage.com">
	  </div>
  	<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>




<%- include("partials/footer") %>