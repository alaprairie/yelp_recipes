<%- include("partials/header") %>
	<div class="container">
		<div class="row mt-2">
			<% recipes.forEach((recipe) => { %>
				<div class="card m-3">
					<a href="/recipes/<%= recipe._id %>">
						<img class="card-img card-img-top" src="<%= recipe.image_link %>" alt="Picture of the Recipe">
					</a>
					<h3 class="card-title m-3"><%= recipe.title %></h3>
					<p class="card-text mb-3 mx-3"><%= recipe.description %></p>
				</div>
			<% }) %>
		</div>
			
	</div>
<%- include ("partials/footer") %>